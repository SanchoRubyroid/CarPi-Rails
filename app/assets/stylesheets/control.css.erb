div.stream-container {
    margin: auto;
    position: relative;
    width: 100%;
    height: 500px;
    background: lightgrey url(<%= asset_path 'no_video.png' %>) no-repeat center;
}

#mjpg-container {
    width:100%;
    -webkit-transform: rotate(-180deg);
    -moz-transform: rotate(-180deg);
    -ms-transform: rotate(-180deg);
    -o-transform: rotate(-180deg);
    transform: rotate(-180deg);
}

#charts-container {
    position: absolute;
    bottom: 10px;
    right: 10px;
}

#buttons-container {
  position: absolute;
  top: 10px;
  right: 10px;
}

#buttons-container button {
  margin: 0px 5px;
}

#info-container {
    color: white;
    position: absolute;
    top: 10px;
    left: 10px;
}

#progress-intermediate {
  position: absolute;
  top: 0px;
  width: 100%;
}