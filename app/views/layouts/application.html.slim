doctype html
html
  head
    meta charset="utf-8" /
    meta content="IE=edge" http-equiv="X-UA-Compatible" /
    meta content="width=device-width, initial-scale=1" name="viewport" /

    title CarPi Management
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Roboto:100'

    = javascript_include_tag 'application'

    = csrf_meta_tags

  body
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      header.mdl-layout__header
        .mdl-layout__header-row
          span.mdl-layout-title CarPi Web
          .mdl-layout-spacer
          nav.mdl-navigation.mdl-layout--large-screen-only
            = link_to('home', root_path, {id: 'home-link', class: 'material-icons icon mdl-navigation__link'})
            /= link_to('settings_applications', '#', {id: 'settings-link', class: 'material-icons icon mdl-navigation__link'})
            /.mdl-tooltip[for='home-link'] Home Page
            /.mdl-tooltip[for='settings-link'] Settings

      .mdl-layout__drawer
        span.mdl-layout-title CarPi Web
        nav.mdl-navigation
          = link_to('Home', root_path, {class: 'mdl-navigation__link'})
          /= link_to('Settings', '#', {class: 'mdl-navigation__link'})
      main.mdl-layout__content
        = yield